<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/notes_view_margin_bottom">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_todo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/card_view_margin"
        app:cardBackgroundColor="@drawable/todo_selector"
        app:cardCornerRadius="@dimen/card_view_corner_radius"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/card_view_stroke_color"
        app:strokeWidth="@dimen/card_view_stroke_width">

        <TextView
            android:id="@+id/notes_view_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/notes_view_padding_start"
            android:paddingTop="@dimen/notes_view_padding_top"
            android:paddingEnd="@dimen/notes_view_padding_end"
            android:paddingBottom="@dimen/notes_view_padding_bottom"
            android:textSize="@dimen/notes_view_text_view_text_size"
            app:cardBackgroundColor="@drawable/todo_selector" />
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>
